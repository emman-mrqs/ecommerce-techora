<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TECHORA - My Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/sellerProducts.css">
</head>
<body>
    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Header and Sidebar-->
        <%- include("../partials/sellerSideBarNav.ejs") %>

        <!-- Page Content -->
        <div class="page-content">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">My Products</h1>
                <p class="page-subtitle">Manage your product inventory and listings.</p>
            </div>
            
            <!-- Filters Section -->
            <div class="filters-section">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-3 flex-wrap">
                        <div class="position-relative">
                            <i class="fas fa-search position-absolute" style="left: 12px; top: 50%; transform: translateY(-50%); color: #9ca3af; font-size: 14px;"></i>
                            <input type="text" class="search-input" placeholder="Search products..." style="padding-left: 35px;">
                        </div>
                        <select class="filter-dropdown">
                            <option>All Status</option>
                            <option>Active</option>
                            <option>Low Stock</option>
                            <option>Out of Stock</option>
                        </select>
                    </div>
                    <a href="/seller/add" class="add-product-btn">
                        <i class="fas fa-plus me-2"></i>
                        Add Product
                    </a>
                </div>
            </div>
            
            <!-- Products Table -->
            <div class="products-table">
                <!-- Table Header -->
                <div class="table-header">
                    <div class="d-flex">
                        <div style="flex: 1; padding-left: 55px;">Product</div>
                        <div class="product-price">Price</div>
                        <div class="product-stock">Stock</div>
                        <div class="product-status">Status</div>
                        <div class="product-actions">Actions</div>
                    </div>
                </div>
                
                <!-- Product Rows -->
                <% if (products.length === 0) { %>
                    <div class="text-center p-4">
                        <p>No products found. Start adding your first product!</p>
                    </div>
                <% } else { %>
                    <% products.forEach(product => { %>
                        <div class="product-row" data-id="<%= product.id %>">
                        <div class="product-avatar">
                            <img src="<%= product.image_url %>" alt="<%= product.name %>" style="width:50px; height:50px; object-fit:cover; border-radius:6px;">
                        </div>
                        <div class="product-info">
                            <div class="product-name"><%= product.name %></div>
                            <div class="product-category"><%= product.description %></div>
                        </div>
                        <div class="product-price">â‚±<%= product.avg_price %></div>
                        <div class="product-stock"><%= product.total_stock %></div>
                        <div class="product-status">
                            <span class="status-badge status-<%= product.status.toLowerCase().replace(/\s+/g, "-") %>">
                            <%= product.status %>
                            </span>
                        </div>
                        <div class="product-actions">
                        <button class="action-btn rating" title="View ratings" data-id="<%= product.id %>">
                            <i class="bi bi-star-fill"></i>
                            <% if (Number(product.rating_count) > 0) { %>
                            <span class="badge bg-warning text-dark ms-1"><%= product.rating_avg %> (<%= product.rating_count %>)</span>
                            <% } %>
                        </button>

                        <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                        <button
                        class="action-btn delete"
                        data-id="<%= product.id %>"
                        data-bs-toggle="modal"
                        data-bs-target="#deleteProductModal"
                        title="Delete">
                        <i class="fas fa-trash"></i>
                        </button>

                        </div>

                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Delete Product Modal -->
    <div class="modal fade" id="deleteProductModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered delete-modal-md">
        <div class="modal-content border-0 shadow-sm rounded-3">
        <div class="modal-header bg-white border-bottom">
            <h5 class="modal-title fw-semibold">Delete Product</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-start">
            <p class="mb-0">Are you sure you want to delete this product?</p>
            <input type="hidden" id="deleteProductId">
        </div>
        <div class="modal-footer bg-white border-top justify-content-end">
            <button type="button" class="btn btn-outline-secondary rounded-2" data-bs-dismiss="modal">Close</button>
            <button type="button" id="confirmDeleteProduct" class="btn btn-danger rounded-2">Delete</button>
        </div>
        </div>
    </div>
    </div>


<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="toastMessage" class="toast align-items-center text-white bg-dark border-0" role="alert">
    <div class="d-flex">
      <div class="toast-body"></div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
  </div>
</div>

  


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sellerProducts.js"></script>
</body>
</html>
