<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TECHORA - Promotions</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/sellerPromotions.css">
</head>

<body>
  <div class="main-content">
    <%- include("../partials/sellerSideBarNav.ejs") %>
    <div class="page-content">
      <div class="page-header">
        <h1 class="page-title">Promotions</h1>
        <button class="create-btn" data-bs-toggle="modal" data-bs-target="#createVoucherModal">
          <i class="fas fa-plus me-2"></i>Create New Voucher
        </button>
      </div>

      <div class="promotions-table-wrapper">
        <div class="promotions-table">
          <div class="table-header">
            <div>Voucher Code</div>
            <div>Discount</div>
            <div>Expiry Date</div>
            <div>Status</div>
            <div>Usage</div>
            <div>Created</div>
            <div>Actions</div>
          </div>

          <% if (promotions.length === 0) { %>
            <div class="promotion-row"><div colspan="7">No vouchers yet</div></div>
          <% } else { %>
            <% promotions.forEach(promo => { %>
              <div class="promotion-row"
                data-id="<%= promo.id %>"
                data-discount-type="<%= promo.discount_type %>"
                data-discount-value="<%= promo.discount_value %>"
                data-usage-limit="<%= promo.usage_limit %>"
                data-expiry-date="<%= promo.expiry_date.toISOString().split('T')[0] %>"
                data-status="<%= promo.status %>">

                <div class="voucher-code"><%= promo.voucher_code %></div>
                <div class="discount">
                  <% if (promo.discount_type === 'percent') { %>
                    <%= promo.discount_value %>% OFF
                  <% } else { %>
                    ₱<%= promo.discount_value %> OFF
                  <% } %>
                </div>
                <div><%= promo.expiry_date.toDateString() %></div>
                <div>
                  <% if (promo.status === 'active') { %>
                    <span class="status-badge status-active">Active</span>
                  <% } else { %>
                    <span class="status-badge status-expired"><%= promo.status %></span>
                  <% } %>
                </div>
                <div>
                  <%
                    let percent = 0;
                    if (promo.usage_limit && promo.usage_limit > 0) {
                      percent = Math.round((promo.used_count / promo.usage_limit) * 100);
                      if (percent > 100) percent = 100;
                      if (percent < 0) percent = 0;
                    }
                  %>
                  <span class="usage-used"><%= promo.used_count %></span>/<%= promo.usage_limit %> used
                  <div class="usage-bar">
                    <div class="usage-fill" data-width="<%= percent %>"></div>
                  </div>
                </div>
                <div><%= promo.created_at.toDateString() %></div>
                    <div class="actions-container">
                    <button class="action-btn edit edit-btn btn btn-sm btn-outline-dark" title="Edit">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="action-btn delete delete-btn btn btn-sm btn-outline-danger" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                    </div>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </div>

<!-- Create Modal -->
<div class="modal fade" id="createVoucherModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content custom-modal">
      <form id="createVoucherForm">
        <div class="modal-header">
          <h5 class="modal-title">Create Voucher</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <!-- Voucher Code -->
          <label for="voucher_code" class="form-label">Voucher Code</label>
          <input class="form-control mb-3" id="voucher_code" name="voucher_code" placeholder="Example: TECHORA10" required>

          <!-- Discount Type -->
          <label for="discount_type" class="form-label">Discount Type</label>
          <select class="form-control mb-3" id="discount_type" name="discount_type" required>
            <option value="percent">Percentage (%)</option>
            <option value="fixed">Fixed Amount (₱)</option>
          </select>

          <!-- Discount Value -->
          <label for="discount_value" class="form-label">Discount Value</label>
          <input type="number" step="0.01" class="form-control mb-3" id="discount_value" name="discount_value" placeholder="Example: 10 or 500" required>

          <!-- Usage Limit -->
          <label for="usage_limit" class="form-label">Usage Limit</label>
          <input type="number" class="form-control mb-3" id="usage_limit" name="usage_limit" placeholder="Example: 50" required>

          <!-- Expiry Date -->
          <label for="expiry_date" class="form-label">Expiry Date</label>
          <input type="date" class="form-control mb-3" id="expiry_date" name="expiry_date" required>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-dark">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editVoucherModal" tabindex="-1">
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content custom-modal">
    <form id="editVoucherForm">
        <input type="hidden" name="id">
        <div class="modal-header">
        <h5 class="modal-title">Edit Voucher</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
        <input class="form-control mb-2" name="voucher_code" required>
        <select class="form-control mb-2" name="discount_type" required>
            <option value="percent">Percentage (%)</option>
            <option value="fixed">Fixed Amount (₱)</option>
        </select>
        <input type="number" step="0.01" class="form-control mb-2" name="discount_value" required>
        <input type="number" class="form-control mb-2" name="usage_limit" required>
        <input type="date" class="form-control mb-2" name="expiry_date" required>
        <select class="form-control mb-2" name="status">
            <option value="active">Active</option>
            <option value="expired">Expired</option>
            <option value="disabled">Disabled</option>
        </select>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-dark">Save Changes</button>
        </div>
    </form>
    </div>
</div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteVoucherModal" tabindex="-1">
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content custom-modal">
    <form id="deleteVoucherForm">
        <input type="hidden" name="id">
        <div class="modal-header">
        <h5 class="modal-title">Delete Voucher</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
        <p>Are you sure you want to delete this voucher?</p>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
    </div>
</div>
</div>

<!-- Toast Notification -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
<div id="toastMessage" class="toast align-items-center text-white bg-dark border-0" role="alert">
    <div class="d-flex">
    <div class="toast-body"></div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
</div>
</div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sellerPromotions.js"></script>
</body>
</html>
