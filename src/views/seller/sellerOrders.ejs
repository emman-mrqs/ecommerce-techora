<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TECHORA - Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/sellerOrders.css">
</head>
<body>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Header and Sidebar-->
         <%- include("../partials/sellerSideBarNav.ejs") %>

        <!-- Page Content -->
        <div class="page-content">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">Orders</h1>
            </div>
            
            <!-- Filters Section -->
            <div class="filters-section">
                <div class="filters-row">
                    <div class="filter-group">
                        <label class="filter-label">Order Status</label>
                        <select class="filter-select">
                            <option value="">All Orders</option>
                            <option value="pending">Pending</option>
                            <option value="completed">Completed</option>
                            <option value="shipped">Shipped</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label class="filter-label">Date Range</label>
                        <select class="filter-select">
                            <option value="">Last 30 days</option>
                            <option value="7">Last 7 days</option>
                            <option value="30">Last 30 days</option>
                            <option value="90">Last 90 days</option>
                            <option value="365">Last year</option>
                            <option value="custom">Custom range</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label class="filter-label">Search Orders</label>
                        <input type="text" class="search-input" placeholder="Search by Order ID or Customer Name">
                    </div>
                </div>
            </div>
            
            <!-- Orders Table -->
            <div class="orders-table">
                <!-- Table Header -->
                <div class="table-header">
                    <div>Order ID</div>
                    <div>Customer Name</div>
                    <div>Product Name</div>
                    <div>Quantity</div>
                    <div>Total Price</div>
                    <div>Status</div>
                    <div>Date</div>
                    <div>Action</div>
                </div>
                
                <!-- Order Rows -->
                <div class="order-row">
                    <div class="order-id">ORD-2024-001</div>
                    <div class="customer-name">Sarah Johnson</div>
                    <div class="product-name">Wireless Bluetooth Headphones</div>
                    <div class="quantity">2</div>
                    <div class="total-price">₱159.98</div>
                    <div><span class="status-badge status-completed">Completed</span></div>
                    <div class="order-date">2024-01-15</div>
                    <div>
                        <button class="action-btn">View Data</button>
                    </div>
                </div>
                
                <div class="order-row">
                    <div class="order-id">ORD-2024-002</div>
                    <div class="customer-name">Michael Chen</div>
                    <div class="product-name">Smart Fitness Tracker</div>
                    <div class="quantity">1</div>
                    <div class="total-price">₱89.99</div>
                    <div><span class="status-badge status-pending">Pending</span></div>
                    <div class="order-date">2024-01-14</div>
                    <div>
                        <button class="action-btn">View Data</button>
                    </div>
                </div>
                
                <div class="order-row">
                    <div class="order-id">ORD-2024-003</div>
                    <div class="customer-name">Emily Rodriguez</div>
                    <div class="product-name">Portable Phone Charger</div>
                    <div class="quantity">3</div>
                    <div class="total-price">₱74.97</div>
                    <div><span class="status-badge status-shipped">Shipped</span></div>
                    <div class="order-date">2024-01-13</div>
                    <div>
                        <button class="action-btn">View Data</button>
                    </div>
                </div>
                
                <div class="order-row">
                    <div class="order-id">ORD-2024-004</div>
                    <div class="customer-name">David Thompson</div>
                    <div class="product-name">USB-C Cable Set</div>
                    <div class="quantity">1</div>
                    <div class="total-price">₱24.99</div>
                    <div><span class="status-badge status-cancelled">Cancelled</span></div>
                    <div class="order-date">2024-01-12</div>
                    <div>
                        <button class="action-btn">View Data</button>
                    </div>
                </div>
                
                <div class="order-row">
                    <div class="order-id">ORD-2024-005</div>
                    <div class="customer-name">Lisa Wang</div>
                    <div class="product-name">Wireless Mouse</div>
                    <div class="quantity">2</div>
                    <div class="total-price">₱119.98</div>
                    <div><span class="status-badge status-completed">Completed</span></div>
                    <div class="order-date">2024-01-11</div>
                    <div>
                        <button class="action-btn">View Data</button>
                    </div>
                </div>
                
