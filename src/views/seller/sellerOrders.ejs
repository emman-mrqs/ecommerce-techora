                    <div><span class="status-badge status-shipped">Shipped</span></div>
                    <div class="order-date">2024-01-09</div>
                    <div>
                        <button class="action-btn">View Data</button>
                    </div>
                </div>
                
                <div class="order-row">
                    <div class="order-id">ORD-2024-008</div>
                    <div class="customer-name">Robert Brown</div>
                    <div class="product-name">Phone Case</div>
                    <div class="quantity">4</div>
                    <div class="total-price">₱39.96</div>
                    <div><span class="status-badge status-completed">Completed</span></div>
                    <div class="order-date">2024-01-08</div>
                    <div>
                        <button class="action-btn">View Data</button>
                    </div>
                </div>
            </div>
            
            <!-- Pagination -->
            <div class="pagination-container">
                <div class="pagination-info">Showing 1-8 of 64orders</div>
                <div class="pagination">
                    <button class="pagination-btn" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="pagination-btn active">1</button>
                    <button class="pagination-btn">2</button>
                    <button class="pagination-btn">3</button>
                    <button class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/sellerOrders"></script>
</body>
</html>