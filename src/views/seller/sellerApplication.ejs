<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seller Application - Techora</title>
  <link rel="stylesheet" href="/css/sellerApplication.css">
</head>
<body>
<div class="app-container">
  <h1>Become a Techora Seller</h1>
  <p class="subtitle">Complete the steps below to apply as a seller.</p>

  <% if (submitted) { %>
    <div class="success-message">
      üéâ <%= successMessage %>
    </div>

    <div class="form-actions" style="margin-top:20px;">
      <a href="/" class="btn-outline">‚Üê Back to Home</a>
      <a href="/profile" class="btn-solid">Go to Profile</a>
    </div>
  <% } else { %>
    <!-- Stepper -->
    <div class="stepper">
      <div class="step active"><span>1</span><p>Store Details</p></div>
      <div class="step"><span>2</span><p>Business Address</p></div>
      <div class="step"><span>3</span><p>Review & Submit</p></div>
    </div>

    <!-- Form -->
    <form id="sellerForm" class="form-card" method="POST" action="/seller-application">
      <!-- STEP 1 -->
      <div class="form-step active">
        <div class="form-group">
          <label for="storeName">Store Name <span>*</span></label>
          <input type="text" id="storeName" name="storeName" required>
        </div>

        <div class="form-group">
          <label for="category">Product Category <span>*</span></label>
          <select id="category" name="category" required>
            <option value="">Select Category</option>
            <option value="mobile-accessories">Mobile Accessories</option>
            <option value="laptops-tablets">Laptops & Tablets</option>
            <option value="audio-devices">Audio Devices</option>
            <option value="smart-wearables">Smart Watches & Wearables</option>
            <option value="gaming-accessories">Gaming Accessories</option>
            <option value="computer-parts">Computer Parts</option>
            <option value="others">Other Gadgets & Accessories</option>
          </select>
        </div>

        <div class="form-group">
          <label for="description">Store Description</label>
          <textarea id="description" name="description" rows="3" placeholder="Tell us what your store will sell..."></textarea>
        </div>
      </div>

      <!-- STEP 2 -->
      <div class="form-step">
        <div class="form-group">
          <label for="address">Business Address <span>*</span></label>
          <input type="text" id="address" name="address" required>
        </div>
      </div>

      <!-- STEP 3 -->
      <div class="form-step">
        <p class="review-text">Please review your details before submitting.</p>
      </div>

      <!-- Navigation Buttons -->
      <div class="form-actions">
        <a href="/" class="btn-outline">‚Üê Back to Home</a>
        <button type="button" id="prevBtn" class="btn-outline hidden">Previous</button>
        <button type="button" id="nextBtn" class="btn-solid">Next</button>
      </div>
    </form>
  <% } %>
  
</div>



  <script src="/js/sellerApplication.js"></script>
</body>
</html>
