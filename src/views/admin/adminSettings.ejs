<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - TECHORA</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/adminSettings.css">


</head>
<body>
  <!-- Sidebar + Header -->
  <%- include("../partials/adminSidebarNav", { activePage: "settings", pageTitle: "Settings" }) %>

  <!-- Main Content -->
  <div class="main-content p-4">
    <h5 class="fw-bold mb-3">Settings</h5>

    <!-- General Settings -->
    <div class="settings-card">
      <h6 class="fw-bold mb-3">General Settings</h6>
      <div class="mb-3">
        <label class="form-label">Site Name</label>
        <input type="text" class="form-control" value="Techora E-commerce">
      </div>
      <div class="mb-3">
        <label class="form-label">Logo Upload</label>
        <input type="file" class="form-control">
        <small class="text-muted">PNG, JPG up to 2MB</small>
      </div>
      <div class="mb-3">
        <label class="form-label">Contact Email</label>
        <input type="email" class="form-control" value="support@techora.com">
      </div>
      <div class="mb-3">
        <label class="form-label">Currency</label>
        <input type="text" class="form-control" value="Philippine Peso (₱)" disabled>
      </div>
    </div>

    <!-- Shipping Settings -->
    <div class="settings-card">
      <h6 class="fw-bold mb-3">Shipping Settings</h6>
      <div class="form-check form-switch mb-2">
        <label class="form-check-label">Free Shipping</label>
        <input class="form-check-input toggle-switch" type="checkbox" checked>
      </div>
      <div class="form-check form-switch mb-2">
        <label class="form-check-label">Flat Rate Shipping</label>
        <input class="form-check-input toggle-switch" type="checkbox" checked>
        <input type="number" class="form-control mt-2" placeholder="Flat Rate (₱)">
      </div>
      <div class="form-check form-switch mb-2">
        <label class="form-check-label">Express Shipping</label>
        <input class="form-check-input toggle-switch" type="checkbox">
      </div>
    </div>

    <!-- Payment Options -->
    <div class="settings-card">
      <h6 class="fw-bold mb-3">Payment Options</h6>
      <div class="form-check form-switch mb-2">
        <label class="form-check-label">Cash on Delivery (COD)</label>
        <input class="form-check-input toggle-switch" type="checkbox" checked>
      </div>
      <div class="form-check form-switch mb-2">
        <label class="form-check-label">PayPal</label>
        <input class="form-check-input toggle-switch" type="checkbox" checked>
      </div>
    </div>

    <!-- Save & Reset -->
    <div class="d-flex justify-content-between">
      <button class="btn-reset">Reset to Default</button>
      <button class="btn-save">Save Changes</button>
    </div>
  </div>

  <script src="/js/adminSideBarNav.js"></script>
</body>
</html>
