<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Settings - TECHORA</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/adminSettings.css">
</head>
<body>
  <!-- Sidebar + Header -->
  <%- include("../partials/adminSidebarNav", { activePage: "settings", pageTitle: "Settings" }) %>

  <% const S = (typeof settings !== 'undefined' && settings) || {}; %>

  <!-- Main Content -->
  <div class="main-content p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h5 class="fw-bold mb-0">Settings</h5>
      <small class="text-muted">
        Last updated:
        <%= S.updated_at ? new Date(S.updated_at).toLocaleString() : "—" %>
      </small>
    </div>

    <form id="settingsForm" enctype="multipart/form-data">
      <!-- General Settings -->
      <div class="settings-card">
        <h6 class="fw-bold mb-3">General Settings</h6>

        <div class="row g-3">
          <div class="col-12">
            <label for="siteName" class="form-label">Site Name</label>
            <input id="siteName" name="site_name" type="text" class="form-control" value="<%= S.site_name || 'TECHORA' %>" required>
          </div>

          <div class="col-12">
            <label for="shortDescription" class="form-label">Short Description (footer)</label>
            <textarea id="shortDescription" name="footer_desc" class="form-control" rows="2" placeholder="Brief description shown in footer"><%= S.footer_desc || '' %></textarea>
          </div>

          <!-- Logo upload -->
          <div class="col-12 col-lg-6">
            <label class="form-label d-flex justify-content-between align-items-center">
              <span>Logo Upload</span>
              <% if (S.logo_url) { %>
                <a href="<%= S.logo_url %>" target="_blank" rel="noopener" class="small">Open current</a>
              <% } %>
            </label>
            <input id="logoUpload" name="logo_file" type="file" class="form-control" accept=".png,.jpg,.jpeg,.webp">
            <small class="text-muted d-block">PNG, JPG, or WEBP up to 2MB</small>
          </div>

          <!-- Current logo with OVERLAY delete icon -->
          <div class="col-12 col-lg-6">
            <label class="form-label d-block">Current Logo</label>
            <div class="position-relative p-2 border rounded d-flex align-items-center justify-content-center" style="min-height:120px;background:#fafafa">
              <!-- trash icon overlay (only in edit mode) -->
              <button
                type="button"
                class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2 d-none"
                id="btnDeleteLogo"
                title="Delete logo"
                aria-label="Delete logo">
                <i class="fa fa-trash"></i>
              </button>

              <% if (S.logo_url) { %>
                <img id="logoPreview" src="<%= S.logo_url %><%= S.updated_at ? ('?v=' + new Date(S.updated_at).getTime()) : '' %>" alt="Logo" style="max-height:100px; max-width:100%; object-fit:contain;">
              <% } else { %>
                <span id="logoPreviewFallback" class="text-muted small">No logo uploaded</span>
              <% } %>
            </div>
          </div>

          <div class="col-12 col-md-6">
            <label for="contactEmail" class="form-label">Contact Email</label>
            <input id="contactEmail" name="contact_email" type="email" class="form-control" value="<%= S.contact_email || '' %>" placeholder="you@domain.com">
          </div>

          <div class="col-12 col-md-6">
            <label for="currency" class="form-label">Currency</label>
            <input id="currency" name="currency" type="text" class="form-control" value="Philippine Peso (₱)" disabled>
          </div>
        </div>

        <!-- Social Media Links -->
        <hr class="my-4">
        <h6 class="fw-bold mb-3">Social Media Links</h6>
        <div class="row g-3">
          <div class="col-12 col-md-4">
            <label for="facebookUrl" class="form-label">Facebook</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fa-brands fa-facebook-f"></i></span>
              <input id="facebookUrl" name="social_facebook" type="url" class="form-control" placeholder="https://facebook.com/yourpage" value="<%= S.social_facebook || '' %>">
            </div>
          </div>

          <div class="col-12 col-md-4">
            <label for="instagramUrl" class="form-label">Instagram</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fa-brands fa-instagram"></i></span>
              <input id="instagramUrl" name="social_instagram" type="url" class="form-control" placeholder="https://instagram.com/yourhandle" value="<%= S.social_instagram || '' %>">
            </div>
          </div>

          <div class="col-12 col-md-4">
            <label for="twitterUrl" class="form-label">Twitter / X</label>
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-twitter-x"></i></span>
              <input id="twitterUrl" name="social_twitter" type="url" class="form-control" placeholder="https://x.com/yourhandle" value="<%= S.social_twitter || '' %>">
            </div>
          </div>
        </div>
      </div>

      <!-- Shipping Settings -->
      <div class="settings-card">
        <h6 class="fw-bold mb-3">Shipping Settings</h6>

        <div class="form-check form-switch mb-2">
          <input id="shipFree" name="ship_free" class="form-check-input toggle-switch" type="checkbox"
                <%= S.ship_free ? 'checked' : '' %> >
          <label for="shipFree" class="form-check-label">Free Shipping</label>
        </div>

        <div class="form-check form-switch mb-2">
          <input id="shipFlat" name="ship_flat" class="form-check-input toggle-switch" type="checkbox"
                <%= S.ship_flat ? 'checked' : '' %> >
          <label for="shipFlat" class="form-check-label">Flat Rate Shipping</label>

          <input id="flatRateAmount" name="flat_rate_amount" type="number" class="form-control mt-2"
                placeholder="Flat Rate (₱)" min="0" step="0.01"
                value="<%= S.flat_rate_amount ?? 0 %>"
                <%= S.ship_flat ? '' : 'disabled' %> >
        </div>
      </div>


      <!-- Payment Options -->
    <div class="settings-card">
      <h6 class="fw-bold mb-3">Payment Options</h6>

      <div class="form-check form-switch mb-2">
        <input id="payCod" name="pay_cod" class="form-check-input toggle-switch" type="checkbox"
              <%= S.pay_cod ? 'checked' : '' %> >
        <label for="payCod" class="form-check-label">Cash on Delivery (COD)</label>
      </div>

      <div class="form-check form-switch mb-2">
        <input id="payPaypal" name="pay_paypal" class="form-check-input toggle-switch" type="checkbox"
              <%= S.pay_paypal ? 'checked' : '' %> >
        <label for="payPaypal" class="form-check-label">PayPal</label>
      </div>
    </div>


      <!-- Action Buttons -->
      <div class="d-flex justify-content-end mt-4">
        <button type="button" class="btn btn-dark" id="btnToggleEdit">
          <i class="fa fa-edit"></i> Edit
        </button>
        <button type="submit" class="btn btn-success ms-2 d-none" id="btnSave">
          <i class="fa fa-save"></i> Save
        </button>
        <button type="button" class="btn btn-secondary ms-2 d-none" id="btnCancel">
          <i class="fa fa-times"></i> Cancel
        </button>
      </div>
    </form>
  </div>

  <script src="/js/adminSettings.js"></script>
</body>
</html>
