<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Audit Logs - TECHORA</title>
  <link rel="stylesheet" href="/css/adminSideBarNav.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <!-- Sidebar + Header -->
  <%- include("../partials/adminSidebarNav", { activePage: "auditLogs", pageTitle: "Audit Logs" }) %>

  <!-- Main Content -->
  <div class="main-content p-4">
    <h5 class="fw-bold mb-3">Audit Logs</h5>

    <!-- Filters -->
    <div class="d-flex flex-wrap gap-2 mb-3">
      <div class="input-group" style="max-width: 350px;">
        <span class="input-group-text bg-light"><i class="fas fa-search"></i></span>
        <input type="text" class="form-control" placeholder="Search by admin name, action, or resource...">
      </div>
      <select class="form-select" style="max-width: 180px;">
        <option>Last 24 hours</option>
        <option>Last 7 days</option>
        <option>Last 30 days</option>
        <option>This year</option>
      </select>
      <select class="form-select" style="max-width: 180px;">
        <option>All Actions</option>
        <option>Create</option>
        <option>Update</option>
        <option>Delete</option>
        <option>Login</option>
        <option>Logout</option>
      </select>
    </div>

    <!-- Activity Log -->
    <div class="card">
      <div class="card-header fw-bold">Activity Log</div>
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-light">
            <tr>
              <th>Admin Name</th>
              <th>Action</th>
              <th>Resource</th>
              <th>Timestamp</th>
              <th>IP Address</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="6" class="text-center text-muted p-4">
                No audit logs found matching your criteria.
              </td>
            </tr>
            <tr>
              <td>Jane Admin</td>
              <td>Update</td>
              <td>products#128</td>
              <td>2024-01-15 09:42:11</td>
              <td>203.0.113.24</td>
              <td><span class="badge bg-success">Success</span></td>
            </tr>
           
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="/js/adminSideBarNav.js"></script>
</body>
</html>
