<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/header.css">
</head>

<%
// pull site settings (provided by middleware), with safe fallbacks
const S = (typeof siteSettings !== 'undefined' && siteSettings) || {};
const SITE_NAME = S.site_name || 'TECHORA';
const LOGO_URL  = S.logo_url ? (S.logo_url + (S.updated_at ? ('?v=' + new Date(S.updated_at).getTime()) : '')) : null;
%>

<!-- Top Bar -->
<div class="top-bar">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex">
        <% if (!user) { %>
          <a href="/seller-application" class="nav-link">Start Selling</a>
        <% } else if (seller && seller.status === "approved") { %>
          <a href="/seller" class="nav-link">My Store</a>
        <% } else if (seller && seller.status === "pending") { %>
          <a href="/seller-application" class="nav-link text-warning">
            <i class="bi bi-hourglass-split me-1"></i> Application Pending
          </a>
        <% } else if (seller && seller.status === "rejected") { %>
          <a href="/seller-application" class="nav-link text-danger">
            <i class="bi bi-x-circle me-1"></i> Re-Apply
          </a>
        <% } else if (seller && seller.status === "suspended") { %>
          <span class="nav-link text-danger d-inline-flex align-items-center" title="Your store is suspended. Please check your email or contact support.">
            <i class="bi bi-slash-circle me-1"></i> Store Suspended
          </span>
        <% } else { %>
          <a href="/seller-application" class="nav-link">Start Selling</a>
        <% } %>

        <a href="/about" class="nav-link">About</a>
        <a href="/contact" class="nav-link">Contact</a>
      </div>

      <div class="auth-links position-relative">
        <% if (user) { %>
          <div class="dropdown d-inline-block">
            <button class="btn btn-link nav-link dropdown-toggle d-flex align-items-center p-0" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-fill me-1 fs-5"></i> <%= user.name %>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        <% } else { %>
          <a href="/login-verify">Login</a> | <a href="/signup">Sign up</a>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Main Header -->
<div class="main-header">
  <div class="container">
    <div class="row align-items-center">
      <!-- Logo / Site Name -->
      <div class="col-lg-3 col-md-4 col-sm-12 mb-2 mb-md-0">
        <a href="/" class="logo d-inline-flex align-items-center gap-2 text-decoration-none">
        <% if (LOGO_URL) { %>
          <img src="<%= LOGO_URL %>" alt="<%= SITE_NAME %> logo"
              style="height:36px;width:auto;object-fit:cover;">
          <span class="brand-text ms-2"><%= SITE_NAME %></span>
        <% } else { %>
          <i class="fas fa-cube"></i>
          <%= SITE_NAME %>
        <% } %>
        </a>
      </div>

      <!-- Search Bar -->
      <div class="col-lg-6 col-md-4 col-sm-12 mb-2 mb-md-0">
        <div class="search-container position-relative">
          <input
            type="text"
            class="search-input"
            id="productSearch"
            placeholder="Search products..."
            autocomplete="off"
          />
          <button class="search-btn">
            <i class="fas fa-search"></i>
          </button>

          <!-- Suggestion Dropdown -->
          <ul id="searchSuggestions" class="suggestions-list"></ul>
        </div>
      </div>

      <!-- Header Actions -->
      <div class="col-lg-3 col-md-4 col-sm-12">
        <div class="header-actions justify-content-end">
          <div class="auth-links d-none d-md-block"></div>

          <%
            const _wl = Number(typeof wishlistCount !== 'undefined' ? wishlistCount : 0);
            const _cart = Number(typeof cartCount !== 'undefined' ? cartCount : 0);
          %>

          <!-- Wishlist -->
          <a href="/wishlist" class="icon-btn position-relative" aria-label="Wishlist">
            <i class="bi bi-heart-fill"></i>
            <% if (_wl > 0) { %>
              <span class="cart-badge" aria-label="<%= _wl %> items in wishlist"><%= _wl %></span>
            <% } %>
          </a>

          <!-- Cart -->
          <a href="/cart" class="icon-btn position-relative" aria-label="Cart">
            <i class="fas fa-shopping-cart"></i>
            <% if (_cart > 0) { %>
              <span class="cart-badge" aria-label="<%= _cart %> items in cart"><%= _cart %></span>
            <% } %>
          </a>

          <!-- Notifications (unchanged logic) -->
          <div class="notification-wrapper dropdown d-inline-block position-relative ms-2">
            <button id="notifButton" class="btn btn-link nav-link dropdown-toggle p-0" data-bs-toggle="dropdown" aria-expanded="false" type="button">
              <i class="bi bi-bell-fill fs-5"></i>
              <% if (typeof orderNotifCount !== 'undefined' && orderNotifCount > 0) { %>
                <span id="notifBadge" class="cart-badge"><%= orderNotifCount %></span>
              <% } %>
            </button>

            <ul class="dropdown-menu dropdown-menu-end p-2" style="min-width: 300px;">
              <li class="px-2 d-flex justify-content-between align-items-center">
                <strong>Notifications</strong>
                <button id="markAllRead" class="btn btn-sm btn-link">Mark all as read</button>
              </li>
              <li><hr class="dropdown-divider"></li>

              <% if (typeof orderNotifications !== 'undefined' && orderNotifications && orderNotifications.length > 0) { %>
                <% orderNotifications.forEach(n => { %>
                  <li class="notification-item px-2 py-2">
                    <a href="/profile#orders" class="d-block text-decoration-none text-dark">
                      <div><small>Order #<%= n.id %></small></div>
                      <div>
                        <strong><%= n.order_status || 'Updated' %></strong>
                        &middot;
                        <small><%= new Date(n.updated_at).toLocaleString() %></small>
                      </div>
                      <% if (n.total_amount) { %>
                        <div><small>Amount: <%= Number(n.total_amount).toFixed(2) %></small></div>
                      <% } %>
                    </a>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                <% }) %>
              <% } else { %>
                <li class="px-2 py-2"><small class="text-muted">No new updates</small></li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Search suggestions (unchanged)
    const searchInput = document.getElementById("productSearch");
    const suggestions = document.getElementById("searchSuggestions");

    if (searchInput) {
      searchInput.addEventListener("input", async () => {
        const query = searchInput.value.trim();
        if (query.length === 0) {
          suggestions.innerHTML = "";
          suggestions.style.display = "none";
          return;
        }
        try {
          const res = await fetch(`/search-suggestions?query=${encodeURIComponent(query)}`);
          const products = await res.json();
          suggestions.innerHTML = "";
          if (products.length > 0) {
            products.forEach(p => {
              const li = document.createElement("li");
              li.textContent = p.name;
              li.onclick = () => { window.location.href = `/products?search=${encodeURIComponent(p.name)}`; };
              suggestions.appendChild(li);
            });
            suggestions.style.display = "block";
          } else {
            const li = document.createElement("li");
            li.textContent = "No results found";
            li.classList.add("no-result");
            suggestions.appendChild(li);
            suggestions.style.display = "block";
          }
        } catch (err) {
          console.error("Search error:", err);
          suggestions.innerHTML = "";
          suggestions.style.display = "none";
        }
      });

      searchInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
          e.preventDefault();
          const keyword = searchInput.value.trim();
          if (keyword) window.location.href = `/products?search=${encodeURIComponent(keyword)}`;
        }
      });

      searchInput.addEventListener("blur", () => {
        setTimeout(() => {
          suggestions.innerHTML = "";
          suggestions.style.display = "none";
        }, 100);
      });
    }

    // Mark notifications seen (unchanged)
    const markBtn = document.getElementById('markAllRead');
    const notifBadge = document.getElementById('notifBadge');
    if (markBtn) {
      markBtn.addEventListener('click', async (e) => {
        e.preventDefault();
        try {
          const res = await fetch('/notifications/mark-seen', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({})
          });
          const data = await res.json();
          if (data && data.ok) {
            if (notifBadge) notifBadge.style.display = 'none';
            const notifButton = document.getElementById('notifButton');
            if (notifButton) { try { notifButton.click(); } catch(e){} }
          }
        } catch (err) {
          console.error('Failed to mark notifications seen', err);
        }
      });
    }
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
