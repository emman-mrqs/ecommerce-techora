<head>
  <link rel="stylesheet" href="/css/sellerSideBarNav.css">
  <script src="/js/sellerSideBarNav.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<!-- Sidebar Overlay (mobile only) -->
<div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <div class="p-3">
    <!-- Logo -->
    <div class="d-flex align-items-center mb-4">
      <div class="me-2" style="background:#f97316;width:28px;height:28px;border-radius:4px;display:flex;align-items:center;justify-content:center;">
        <a href="/"><span style="color:#fff;font-weight:bold;font-size:14px;">T</span></a>
      </div>
      <a href="/"><span style="color:#fff;font-weight:bold;">TECHORA</span></a>
    </div>

    <!-- Nav Links -->
    <nav class="nav flex-column">
      <a class="nav-link <%= activePage === 'overview' ? 'active' : '' %>" href="/seller"><i class="fas fa-chart-line"></i> Overview</a>
      <a class="nav-link <%= activePage === 'products' ? 'active' : '' %>" href="/seller/products"><i class="fas fa-box"></i> My Products</a>
      <a class="nav-link <%= activePage === 'addProduct' ? 'active' : '' %>" href="/seller/add"><i class="fas fa-plus"></i> Add Product</a>
      <a class="nav-link <%= activePage === 'orders' ? 'active' : '' %>" href="/seller/orders"><i class="fas fa-shopping-cart"></i> Orders</a>
      <a class="nav-link <%= activePage === 'earnings' ? 'active' : '' %>" href="/seller/earnings"><i class="fa-solid fa-peso-sign"></i> Earnings</a>
      <a class="nav-link <%= activePage === 'analytics' ? 'active' : '' %>" href="/seller/analytics"><i class="fas fa-chart-bar"></i> Analytics</a>
      <a class="nav-link <%= activePage === 'promotions' ? 'active' : '' %>" href="/seller/promotions"><i class="fas fa-tags"></i> Promotions</a>
      <a class="nav-link <%= activePage === 'settings' ? 'active' : '' %>" href="/seller/settings"><i class="fas fa-cog"></i> Settings</a>
    </nav>
  </div>
</div>

<!-- Top Header -->
<div class="top-header d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
    <!-- Mobile hamburger -->
    <button class="mobile-menu-btn me-3" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
    <!-- Dynamic Title -->
    <span class="text-muted"><%= pageTitle %></span>
  </div>

  <div class="user-actions d-flex align-items-center gap-3">

    <!-- Seller notification dropdown -->
    <div class="notification-wrapper dropdown">
      <button class="btn btn-link position-relative p-0" id="sellerNotifButton" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-bell text-muted"></i>
        <% if (typeof sellerNotifCount !== 'undefined' && sellerNotifCount > 0) { %>
          <span id="sellerNotifBadge" class="badge bg-danger rounded-pill"><%= sellerNotifCount %></span>
        <% } else { %>
          <span id="sellerNotifBadge" class="badge bg-danger rounded-pill" style="display:none">0</span>
        <% } %>
      </button>

      <ul class="dropdown-menu dropdown-menu-end p-2" style="min-width:320px;" aria-labelledby="sellerNotifButton">
        <!-- Header (fixed) -->
        <li class="d-flex justify-content-between align-items-center px-2">
          <strong>Notifications</strong>
          <button id="sellerMarkAllRead" class="small btn btn-link p-0" type="button">Mark all read</button>
        </li>
        <li><hr class="dropdown-divider"></li>

        <!-- Scrollable list container -->
        <li class="p-0">
          <ul id="sellerNotifList" class="list-unstyled mb-0 overflow-auto" style="max-height: 360px;">
            <% if (sellerNotifications && sellerNotifications.length) { %>
              <% sellerNotifications.forEach(n => { 
                   const key = n.ref_id ? `ref_${n.ref_id}` : `id_${n.id}`;
              %>
                <li class="px-2 py-2 notification-item" data-key="<%= key %>">
                  <a href="<%= n.kind === 'order' && n.ref_id ? `/seller/orders/${n.ref_id}` : '#' %>" class="d-block text-decoration-none text-dark">
                    <div><small><%= n.title %></small></div>

                    <% if (n.actor) { %>
                      <div class="small text-muted">
                        By:
                        <%= (n.actor.name && n.actor.name !== 'null') ? n.actor.name :
                             (n.actor.email && n.actor.email !== 'null') ? n.actor.email :
                             ('User #' + n.actor.id) %>
                      </div>
                    <% } %>

                    <% if (n.body) { %>
                      <div class="small text-muted"><%= n.body %></div>
                    <% } %>

                    <div class="small text-muted mt-1"><%= new Date(n.created_at).toLocaleString() %></div>
                  </a>
                </li>
                <li><hr class="dropdown-divider my-0"></li>
              <% }) %>
            <% } else { %>
              <li id="sellerNotifEmpty" class="px-2 py-2 text-muted"><small>No notifications</small></li>
            <% } %>
          </ul>
        </li>

        <!-- Footer (fixed) -->
        <li><hr class="dropdown-divider"></li>
      </ul>
    </div>

    <i class="fas fa-envelope text-muted"></i>
    <div class="avatar">A</div>
  </div>
</div>
