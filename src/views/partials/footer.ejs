<head>
  <link rel="stylesheet" href="/css/footer.css">
</head>

<%
const S = (typeof siteSettings !== 'undefined' && siteSettings) || {};
const SITE_NAME = S.site_name || 'TECHORA';
const FOOTER_DESC = S.footer_desc || 'Premium technology products for the modern lifestyle. Quality you can trust.';
const EMAIL = S.contact_email || '';
const FB = S.social_facebook || '#';
const IG = S.social_instagram || '#';
const TW = S.social_twitter || '#';
%>

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-column">
      <h4><%= SITE_NAME %></h4>
      <p class="secondary-text"><%= FOOTER_DESC %></p>

      <div class="social-icons">
        <a href="<%= FB %>" target="_blank" rel="noopener" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
        <a href="<%= IG %>" target="_blank" rel="noopener" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
        <a href="<%= TW %>" target="_blank" rel="noopener" aria-label="Twitter/X"><i class="bi bi-twitter"></i></a>
      </div>

      <% if (EMAIL) { %>
        <div class="mt-2">
          <a href="mailto:<%= EMAIL %>" class="small text-reset"><i class="bi bi-envelope me-1"></i> <%= EMAIL %></a>
        </div>
      <% } %>
    </div>

    <div class="footer-column">
      <h4>Shop</h4>
      <ul>
        <li><a href="/products">All Products</a></li>
        <li><a href="/products?category=Audio">Audio</a></li>
        <li><a href="/products?category=Wearables">Wearables</a></li>
        <li><a href="/products?category=Accessories">Accessories</a></li>
      </ul>
    </div>

    <div class="footer-column">
      <h4>Support</h4>
      <ul>
        <li><a href="/contact">Contact Us</a></li>
        <li><a href="/about#faq">FAQ</a></li>
        <li><a href="/about#shipping">Shipping Info</a></li>
        <li><a href="/about#returns">Returns</a></li>
      </ul>
    </div>

    <div class="footer-column">
      <h4>Company</h4>
      <ul>
        <li><a href="/about">About Us</a></li>
        <li><a href="/about#careers">Careers</a></li>
        <li><a href="/privacy">Privacy Policy</a></li>
        <li><a href="/terms">Terms of Service</a></li>
      </ul>
    </div>
  </div>

  <div class="footer-bottom">
    <p>Â© <%= new Date().getFullYear() %> <%= SITE_NAME %>. All rights reserved.</p>
  </div>
</footer>
