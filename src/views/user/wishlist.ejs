<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>TECHORA - Wishlist</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/wishlist.css" />
</head>
<body class="wishlist-page">
  <nav>
    <%- include("../partials/header.ejs") %>
  </nav>

  <main class="wishlist-container">
    <div class="container">

      <!-- Top stripe -->
      <div class="wl-top-stripe d-flex align-items-center justify-content-between" aria-hidden="true">
        <div class="d-flex align-items-center gap-2">
          <i class="fa-solid fa-heart"></i><span>Save items you love</span>
        </div>
        <div class="d-flex align-items-center gap-2">
          <i class="fa-solid fa-bag-shopping"></i><span>Move to cart anytime</span>
        </div>
      </div>

      <div class="row g-4">
        <div class="col-lg-8 col-md-7">
          <section class="wishlist-card" data-animate>
            <header class="wishlist-header">
              <h1 class="wl-title">YOUR WISHLIST</h1>
              <p class="wl-subtitle"><span id="wishlist-count"><%= wishlist.count %></span> items you’re watching</p>
            </header>

            <% if (!wishlist.items || wishlist.items.length === 0) { %>
              <div class="empty-wishlist" data-animate>
                <i class="fas fa-heart empty-icon"></i>
                <p>Your wishlist is empty</p>
                <a class="wl-empty-link" href="/">Browse products</a>
              </div>
            <% } else { %>
              <div id="wishlist-items">
                <% wishlist.items.forEach(function(it){ %>
                <article class="wishlist-item" data-animate
                         data-id="<%= it.variantId %>" aria-label="Wishlist item">
                  <div class="item-image">
                    <% if (it.image) { %>
                      <img src="<%= it.image %>" alt="<%= it.name %>" />
                    <% } else { %>
                      <i class="fas fa-mobile-alt" aria-hidden="true"></i>
                    <% } %>
                  </div>

                  <div class="item-details">
                    <div class="item-name"><%= it.name %></div>
                    <div class="item-variant">
                      <% if (it.color) { %><%= it.color %><% } %>
                      <% if (it.ram) { %> • <%= it.ram %>GB RAM<% } %>
                      <% if (it.storage) { %> • <%= it.storage %>GB<% } %>
                    </div>
                    <div class="item-price">₱<%= (it.price || it.unitPrice || 0).toFixed(2) %></div>
                    <% if (it.stockStatus) { %>
                      <div class="item-stock <%= it.stockStatus === 'In Stock' ? 'ok' : 'low' %>"><%= it.stockStatus %></div>
                    <% } %>
                  </div>

                  <div class="item-actions">
                    <button type="button" class="btn btn-move" title="Move to cart"
                            aria-label="Move to cart">
                      <i class="fa-solid fa-cart-plus me-1"></i> Move to Cart
                    </button>
                    <button type="button" class="btn btn-remove" title="Remove"
                            aria-label="Remove from wishlist">
                      <i class="fa-solid fa-xmark"></i>
                    </button>
                  </div>
                </article>
                <% }) %>
              </div>
            <% } %>
          </section>
        </div>

        <aside class="col-lg-4 col-md-5">
          <section class="wl-summary" data-animate aria-label="Wishlist summary">
            <h2 class="summary-title">QUICK ACTIONS</h2>

            <div class="summary-row">
              <span class="summary-label">Items</span>
              <span class="summary-value" id="wl-items-count"><%= wishlist.count %></span>
            </div>

            <div class="summary-divider"></div>

            <a class="btn wl-cta w-100" href="/" role="button">CONTINUE BROWSING</a>
            <p class="hint mt-3">
              Tip: Move items to your cart to lock in current prices.
            </p>
          </section>
        </aside>
      </div>
    </div>
  </main>

  <footer>
    <%- include("../partials/footer.ejs") %>
  </footer>

  <!-- Page-scoped micro-interactions only (no business logic here) -->
  <script>
    (() => {
      // Fade/slide-in on view
      const els = document.querySelectorAll('.wishlist-page [data-animate]');
      const io = new IntersectionObserver((entries) => {
        entries.forEach(e => { if (e.isIntersecting) e.target.classList.add('in'); });
      }, { threshold: 0.1 });
      els.forEach(el => io.observe(el));

      // Button press effect
      document.querySelectorAll('.wishlist-page .btn').forEach(b=>{
        b.addEventListener('click', () => {
          b.classList.add('pressed');
          setTimeout(()=>b.classList.remove('pressed'), 150);
        });
      });

      // Optional: visual remove hint (your real remove/move happens in wishlist.js)
      document.querySelectorAll('.wishlist-page .btn-remove').forEach(btn=>{
        btn.addEventListener('click', (ev)=>{
          const row = ev.currentTarget.closest('.wishlist-item');
          row.classList.add('removing');
        });
      });
    })();
  </script>

  <!-- Keep your own wishlist logic separate (move/remove AJAX, etc.) -->
  <script src="/js/wishlist.js"></script>
</body>
</html>
