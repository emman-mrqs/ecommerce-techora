<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TECHORA Products | Shop Now</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">    
    <link rel="stylesheet" href="css/products.css">
</head>

<body>
    <nav>
        <%- include("../partials/header.ejs") %>
    </nav>


    <div class="container1">
        <!-- Header Section -->
        <div class="shop-related-seller-box">
            <div class="shop-related-title">
            <% if (search) { %>
                Shop Related to: <strong>"<%= search %>"</strong>
            <% } else { %>
                All Products
            <% } %>
            </div>

            <div class="shop-seller-card">
                <!-- Seller Avatar -->
                <div class="seller-logo">
                <img src="/images/apple-logo.png" alt="Apple Store Logo">
                </div>

                <!-- Seller Info -->
                <div class="seller-details">
                <div class="seller-name">Apple Flagship Store</div>
                <div class="seller-followers">797.1K Followers</div>
                </div>

                <!-- Seller Stats -->
                <div class="seller-stats">
                <div class="stat-box">
                    <div class="stat-label">Products</div>
                    <div class="stat-value">144</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">Rating</div>
                    <div class="stat-value">4.9</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">Response</div>
                    <div class="stat-value">Within Minutes</div>
                </div>
                </div>
            </div>
            </div>


            <!-- Simplified Sorting and Pagination Bar -->
            <div class="sort-pagination-bar">
            <div class="sort-by-group">
                <span class="sort-label">Sort by:</span>
                
                <button class="sort-btn active" data-sort="relevance">Relevance</button>
                <button class="sort-btn" data-sort="latest">Latest</button>
                <button class="sort-btn" data-sort="top-sales">Top Sales</button>

                <div class="sort-dropdown">
                <button class="sort-btn dropdown-toggle">Price ‚ñæ</button>
                <div class="dropdown-menu">
                    <div class="dropdown-item" data-sort="price-low">Low to High</div>
                    <div class="dropdown-item" data-sort="price-high">High to Low</div>
                </div>
                </div>
            </div>

            <div class="pagination-group">
                <span class="page-count"><span class="current-page">1</span>/<span class="total-pages">17</span></span>
                <button class="page-btn" disabled>&lt;</button>
                <button class="page-btn">&gt;</button>
            </div>
        </div>

                <!-- Products Grid -->
        <!-- Products Grid -->
<div class="products-grid">
  <% if (products && products.length > 0) { %>
    <% products.forEach(product => { %>
<a href="/buy/<%= product.id %>" class="clean-product-card">
        <div class="product-img">
          <% if (product.img_url) { %>
            <img src="<%= product.img_url %>" alt="<%= product.name %>" style="width: 100%; height: 150px; object-fit: contain;">
          <% } else { %>
            üõçÔ∏è
          <% } %>
        </div>
        <div class="product-info">
          <div class="product-name"><%= product.name %></div>

          <% if (product.price) { %>
            <div class="product-price">‚Ç±<%= product.price %></div>
          <% } %>
        </div>
      </a>
    <% }); %>
  <% } else { %>
    <p>No products found for "<%= search %>"</p>
  <% } %>
</div>

    </div>

    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>


    <script src="js/products.js"></script>
</body>
</html>