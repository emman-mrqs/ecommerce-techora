<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TECHORA - Shop Now</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/index.css">

</head>
<body>
    <!-- Header -->
    <nav>
        <%- include("../partials/header.ejs") %>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section" id="home">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1>Shop Now!</h1>
                        <p>Discover our curated collection of cutting-edge electronics designed to enhance your lifestyle with uncompromising quality and style.</p>
                        <div class="hero-buttons">
                            <button class="btn btn-primary">Shop Now</button>
                            <button class="btn btn-outline-primary">Learn More</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <h2>Hero 3</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Promotions Section -->
    <section class="promotions-section" id="promotions">
        <div class="container">
            <div class="section-title">
                <h2>Limited Time Promotions</h2>
                <p class="section-subtitle">Don't miss out on these incredible deals and exclusive offers!</p>
            </div>
            
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="promo-card">
                        <div class="promo-badge">50% OFF</div>
                        <h4 class="promo-title">Weekend Sale</h4>
                        <p class="promo-description">Get 50% off on all headphones and speakers this weekend only!</p>
                        <button class="btn promo-btn">Shop Sale</button>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="promo-card">
                        <div class="promo-badge">BUY 2 GET 1</div>
                        <h4 class="promo-title">Accessories Deal</h4>
                        <p class="promo-description">Buy any 2 chargers and get the third one absolutely free!</p>
                        <button class="btn promo-btn">Shop Now</button>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="promo-card">
                        <div class="promo-badge">FREE SHIPPING</div>
                        <h4 class="promo-title">Orders Over ₱2,000</h4>
                        <p class="promo-description">Enjoy free shipping on all orders above ₱2,000. Limited time offer!</p>
                        <button class="btn promo-btn">Shop Now</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- New Arrivals Section -->
    <section class="featured-section" id="new-arrivals">
        <div class="container">
            <div class="section-title">
                <h2>New Arrivals</h2>
                <p class="section-subtitle">Fresh additions to our collection - be the first to get your hands on these latest tech innovations.</p>
            </div>
            
           <div class="row">
            <% newArrivals.forEach(p => { %>
                <div class="col-lg-3 col-md-6">
                <div class="product-card">
                    <img src="<%= p.img_url || '/images/no-image.png' %>" 
                        alt="<%= p.name %>" class="img-fluid">
                    <h4 class="product-title"><%= p.name %></h4>
                    <p class="product-price">₱<%= p.price %></p>
                    <a href="/buy/<%= p.id %>" class="btn btn-primary btn-sm">Shop Now</a>
                </div>
                </div>
            <% }) %>
            </div>
        </div>
    </section>

    <!-- Popular Products Section -->
    <section class="popular-section" id="popular">
    <div class="container">
        <div class="section-title">
        <h2>Popular Products</h2>
        <p class="section-subtitle">Customer favorites based on real orders.</p>
        </div>

        <div class="row">
        <% popularProducts.forEach(p => { %>
            <div class="col-lg-3 col-md-6">
            <div class="product-card">
                <img src="<%= p.img_url || '/images/no-image.png' %>" 
                    alt="<%= p.name %>" class="img-fluid">
                <h4 class="product-title"><%= p.name %></h4>
                <p class="product-price">₱<%= p.price %></p>
                <small class="text-muted">Ordered <%= p.order_count %> times</small>
                <a href="/buy/<%= p.id %>" class="btn btn-primary btn-sm mt-2">Shop Now</a>
            </div>
            </div>
        <% }) %>
        </div>
    </div>
    </section>


    <!-- Newsletter -->
    <section class="newsletter-section">
        <div class="container">
            <div class="newsletter-content">
                <h3>Stay Updated</h3>
                <p>Subscribe to our newsletter for exclusive deals, new product launches, and tech insights.</p>
                <div class="newsletter-form">
                    <input type="email" placeholder="Enter your email address" class="form-control">
                    <button type="submit" class="btn">Subscribe</button>
                </div>
            </div>
        </div>
    </section>
    
    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>

