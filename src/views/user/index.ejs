    <!DOCTYPE html>
    <html lang="en">
    <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>TECHORA - Shop Now</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="css/index.css"/>

    </head>

    <body>
    <!-- Header -->
    <nav><%- include("../partials/header.ejs") %></nav>

    <!-- Full-bleed Banner -->
    <section class="banner-hero" id="home">
        <div class="container-fluid p-0">
        <img src="/uploads/img/Techora%20Banner.png" alt="Techora banner" class="w-100 d-block banner-img" data-parallax/>
        <!-- Optional chip; remove if you want pure image -->
        <div class="banner-chip d-none d-md-inline-flex">
            <i class="fa-solid fa-bolt me-2"></i> New drops weekly
        </div>
        </div>
    </section>
<!-- Featured Products -->
<section class="featured-section" id="featured">
  <div class="container" data-animate>
    <div class="section-title text-center">
      <h2>Featured Products</h2>
      <div class="underline"></div>
      <p class="section-subtitle">Handpicked and best-selling gadgets right now.</p>
    </div>

    <div class="row g-4">
      <% if (featuredProducts && featuredProducts.length) { %>
        <% featuredProducts.forEach(p => { %>
          <div class="col-lg-3 col-md-6">
            <div class="product-card">
              <span class="badge-corner">FEATURED</span>
              <img
                src="<%= p.img_url || '/images/no-image.png' %>"
                alt="<%= p.name %>">
              <div class="content">
                <h4 class="product-title"><%= p.name %></h4>
                <p class="product-price">₱<%= p.price %></p>
                <% if (typeof p.order_count !== 'undefined') { %>
                  <small class="text-muted d-block mb-1">
                    <%= p.order_count %> sold (30d)
                  </small>
                <% } %>
                <a href="/buy/<%= p.id %>" class="btn btn-primary btn-sm">Shop Now</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="text-center text-muted py-4">
            No featured products yet—check back soon.
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>


    <!-- New Arrivals -->
    <section class="featured-section" id="new-arrivals">
        <div class="container" data-animate>
        <div class="section-title text-center">
            <h2>New Arrivals</h2>
            <div class="underline"></div>
            <p class="section-subtitle">Fresh additions to our collection—be first to grab the latest tech.</p>
        </div>

        <div class="row g-4">
            <% newArrivals.forEach(p => { %>
            <div class="col-lg-3 col-md-6">
                <div class="product-card">
                <span class="badge-corner">NEW</span>
                <img src="<%= p.img_url || '/images/no-image.png' %>" alt="<%= p.name %>">
                <div class="content">
                    <h4 class="product-title"><%= p.name %></h4>
                    <p class="product-price">₱<%= p.price %></p>
                    <a href="/buy/<%= p.id %>" class="btn btn-primary btn-sm">Shop Now</a>
                </div>
                </div>
            </div>
            <% }) %>
        </div>
        </div>
    </section>

    <!-- Popular -->
    <section class="popular-section" id="popular">
        <div class="container" data-animate>
        <div class="section-title text-center">
            <h2>Popular Products</h2>
            <div class="underline"></div>
            <p class="section-subtitle">Customer favorites based on real orders.</p>
        </div>

        <div class="row g-4">
            <% popularProducts.forEach(p => { %>
            <div class="col-lg-3 col-md-6">
                <div class="product-card">
                <span class="badge-corner">TOP</span>
                <img src="<%= p.img_url || '/images/no-image.png' %>" alt="<%= p.name %>">
                <div class="content">
                    <h4 class="product-title"><%= p.name %></h4>
                    <p class="product-price">₱<%= p.price %></p>
                    <small class="text-muted">Ordered <%= p.order_count %> times</small><br>
                    <a href="/buy/<%= p.id %>" class="btn btn-primary btn-sm mt-2">Shop Now</a>
                </div>
                </div>
            </div>
            <% }) %>
        </div>
        </div>
    </section>

    <!-- Newsletter -->
    <section class="newsletter-section">
        <div class="container" data-animate>
        <div class="newsletter-content text-center">
            <h3 class="fw-bold">Stay Updated</h3>
            <p>Subscribe for exclusive deals, new product launches, and tech insights.</p>
            <form class="newsletter-form" id="newsletterForm">
            <input type="email" placeholder="Enter your email address" class="form-control" required/>
            <button type="submit" class="btn">Subscribe</button>
            </form>
        </div>
        </div>
    </section>

    <footer><%- include("../partials/footer.ejs") %></footer>

    <script>
        // Reveal on scroll
        const io = new IntersectionObserver(entries=>{
        entries.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('in'); io.unobserve(e.target); }});
        }, {threshold: .12});
        document.querySelectorAll('[data-animate]').forEach(el=>io.observe(el));

        // Tiny parallax on banner
        const banner = document.querySelector('[data-parallax]');
        if(banner){
        window.addEventListener('scroll', ()=>{
            const y = Math.min(40, window.scrollY * 0.06);
            banner.style.transform = `translateY(${y}px) scale(1.01)`;
        }, {passive:true});
        }

        // Newsletter UX (non-blocking, no backend changes)
        const nf = document.getElementById('newsletterForm');
        if(nf){
        nf.addEventListener('submit', e=>{
            e.preventDefault();
            const email = nf.querySelector('input').value.trim();
            if(email){
            alert('Thanks for subscribing! We’ll send updates to ' + email);
            nf.reset();
            }
        });
        }
    </script>
    </body>
    </html>
